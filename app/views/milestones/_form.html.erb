<%= bootstrap_form_for([@project, @milestone]) do |form| %>
 
  <% if @milestone.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@milestone.errors.count, "error") %> prohibited
        this milestone from being saved:
      </h2>
      <ul>
        <% @milestone.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <%= form.text_field :name, label: "Name" %>
  <%= form.text_area :description, label: "Description" %>
  <%= form.text_area :success_criteria, label: "We'll know we've reached this milestone when..." %>
  <%= form.date_field :date, label: "We plan to reach this milestone by..." %>
  <%= form.check_box :completed %>
  <%= form.submit %>
 
<% end %>