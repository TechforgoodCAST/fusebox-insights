<%= simple_form_for([@project, @milestone]) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <div class="mb-6">
    <%= f.input :success_criteria, placeholder: "We'll know we've reached this milestone when...", as: :trix_editor %>
  </div>
  <%= f.input :deadline, as: :date, start_year: Date.today.year, discard_day: true, order: [:month, :year], include_blank: true %>
  <%= f.submit class: 'btn btn-primary', data: { disable_with: 'Saving...' } %>
<% end %>