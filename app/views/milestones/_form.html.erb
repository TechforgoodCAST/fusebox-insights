<%= simple_form_for([@project, @milestone]) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :success_criteria, as: :trix_editor %>
  <%= f.input :deadline, as: :date, start_year: Date.today.year, discard_day: true, order: [:month, :year], include_blank: true %>
  <%= f.submit %>
<% end %>