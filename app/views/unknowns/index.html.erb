<h1>Unknowns</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unknowns.each do |unknown| %>
      <tr>
        <td><%= unknown.title %></td>
        <td><%= unknown.author.username %></td>
        <td><%= link_to 'Show', unknown %></td>
        <td><%= link_to 'Edit', edit_unknown_path(unknown) %></td>
        <td><%= link_to 'Destroy', unknown, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unknown', new_unknown_path %>
