<%= render partial: 'projects/subnav' %>

<div class="max-w-3xl mx-auto px-4 my-8">
  <%# # TODO: can navigate back %>
  <p class="mb-6"><%= link_to 'â€¹ Back', project_topics_path(@project), class: 'underline' %></p>
  <%= render partial: 'layouts/notices' %>

  <div class="card">
    <div class="flex flex-wrap items-start justify-between mb-3">
      <h1><%= @topic.title %></h1>
      <div class="rich-text border-none p-0 my-3">
        <%= @topic.long_desc&.html_safe %>
      </div>
      
