<%= simple_form_for([@project, @iteration]) do |f| %>

  <% if @iteration.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@iteration.errors.count, "error") %> prohibited
        this iteration from being saved:
      </h2>
      <ul>
        <% @iteration.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :title %>
  <%= f.input :description %>

  <h3>Outcomes</h3>
  <%= f.fields_for :outcomes do |o| %>
     <div class="card mb-3">
       <div class="card-body">
         <%= o.input :title, label: 'What are we going to learn or prove?' %>
         <%= o.input :description %>
       </div>

     </div>
  <% end %>

  <%= f.input :start_date, html5: true %>
  <%= f.input :debrief_date, html5: true %>

  <%= f.submit %>
  <%= f.submit 'Save as draft'%>

<% end %>