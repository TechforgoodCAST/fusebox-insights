<%= bootstrap_form_for([@project, assumption]) do |f| %>

  <div class="form-row">
    <div class="col-md-6">
      <%= f.select :group_id, current_user.groups.map{ |s| [s.title.humanize, s.id] } %>
    </div>
    <div class="col-md-6">
      <%= f.select :certainty, Assumption.certainties.keys.map{ |s| [s.humanize, s] } %>
    </div>
  </div>

  <%= f.text_field :title %>

  <%= f.text_area :description, label: "Assumption", rows: 4 %>
  <%= f.submit "Save assumption", data: { disable_with: 'Updating...' }, class: 'btn btn-info' %>

  <% if policy(assumption).destroy? %>
    <%= link_to 'Delete', project_assumption_path(assumption.project, assumption), method: :delete, data: { confirm: 'This action is irreversible, are you sure?' }, class: 'btn btn-secondary ml-1' %>
  <% end %>

<% end %>
