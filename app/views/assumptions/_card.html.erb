<div class="card mb-3">

  <div class="card-body">
    <div class="text-muted mb-2 d-flex align-items-center justify-content-between">
      <div>
        <small class="text-muted mb-0">Updated <%= time_ago_in_words(assumption.updated_at) %> ago</small>

        <% if assumption.group %>
          &middot;
          <small class="text-muted"><%= assumption.group&.title %></small>
        <% end %>
      </div>

      <%- if edit && policy(assumption).update? %>
        <%= link_to 'Edit', edit_project_assumption_path(assumption.project, assumption) %>
      <% end %>
    </div>

    <div class="mb-2">
      <p class="font-weight-semibold mb-0"><%= link_to assumption.title, project_assumption_path(assumption.project, assumption) %></p>
      <div class="mt-2">
        <% if assumption.description.present? && !description %>
          <i class="fa fa-align-left"></i>
        <% end %>
        <% if assumption.responses.any? %>
          <div class="float-right">
            <i class="far fa-comment-alt"></i> <%= assumption.responses.count %>
          </div>
        <% end %>
      </div>
      <% if description %>
        <p><%= simple_format(assumption.description) %></p>
      <% end %>
    </div>

    <% if assumption.damage %>
      <div class="badge badge-secondary"><%= assumption.damage.humanize %> impact</div>
    <% end %>
  </div>

</div>
