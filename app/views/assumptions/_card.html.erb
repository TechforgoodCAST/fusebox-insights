<div class="card mb-4">

  <div class="card-body">
      <p class="text-muted mb-1"><small>Created by <%= assumption.author.username %></small></p>
      <p><%= link_to assumption.title, project_assumption_path(assumption.project, assumption) %></p>
  </div>

  <div class='card-footer'>
    <em class="fa fa-comment-dots pr-1"></em>
    <small style="position: relative; top: -1px;"><%= pluralize(assumption.responses.count, "Insight") %></small>
    <p class="text-muted mb-0"><small>Updated <%= time_ago_in_words(assumption.updated_at) %> ago</small></p>
  </div>

</div>
