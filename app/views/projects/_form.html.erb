<%= simple_form_for(project) do |form| %>
  <% if project.errors.any? %>
    <div id="error_count"><p><%= pluralize(project.errors.count, 'error') %></p></div>
    <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :private %><br>
    <%= form.check_box :private %>
  </p>
  <div class="text-right">
    <%= form.button :submit, data: { disable_with: 'Updating...' } %>
  </div>
<% end %>