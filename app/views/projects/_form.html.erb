<%= simple_form_for(@project) do |f| %>

  <%= f.input :title %>
  <%= f.input :description %>

  <%- if action_name == 'edit' %>
    <p>More about this project</p>
    <%= f.trix_editor :more_details %>
  <% end %>

  <%- if action_name == 'new' %>
    <p>Preferences</p>
    <%= f.input :milestones, as: :boolean, input_html: { checked: true, disabled: true } %>
  <% end %>

  <%= f.submit %>

<% end %>