<div class="row">
  <div class="col-6">
    <h1 class="mb-0"><%= @project.name %></h1>
    <small>
      <%= private_label(@project) %>
      –
      <%- if policy(@project).edit? %>
        <%= link_to 'Edit', edit_project_path(@project) %>
      <% end %>
      –
      <%- if policy(@project).destroy? %>
        <%= link_to 'Archive', project_path(@project), method: :delete, data: { confirm: 'Are you sure you wish to archive this project?' } %>
      <% end %>
    </small>
  </div>
  <% if policy(@project.assumptions.new).new? %>
    <div class="col-6 text-right">
      <%= link_to new_project_assumption_path(@project), class: 'btn btn-info btn-icon' do %>
        <em class="fa fa-comment-medical"></em>
        Add Assumption
      <% end %>
    </div>
  <% end %>
</div>

<div class="mt-3">
  <%= simple_format @project.description %>
</div>

<div class="mb-2 mt-4">
  <%- if @project.project_members.any? %>
    <%- @project.project_members.each do |member| %>
      <%= render partial: "project_members/profile_link", locals: { project_member: member } %>
    <% end %>
  <% end %>
  <%= link_to "Add collaborator", new_project_project_member_path(@project) %>
</div>

<nav class="mb-5 pt-3">
  <ul class="nav tabs">
    <li class="nav-item mr-3"><%= link_to 'Overview', project_path(@project), class: "nav-link" %></li>
    <li class="nav-item mr-3"><%= link_to 'Assumptions', project_assumptions_path(@project), class: "nav-link" %>
    <li class="nav-item mr-3"><%= link_to 'Knowledge board', project_knowledge_board_path(@project), class: "nav-link" %>
    <% if policy(SupportMessage).index? %>
      <li class="nav-item ml-auto"><%= link_to 'Support', project_support_messages_path(@project), class: "nav-link" %>
    <% end %>
  </ul>
</nav>
