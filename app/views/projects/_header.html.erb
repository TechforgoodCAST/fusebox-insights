<div class="row">
  <div class="col-6">
    <h2 class="mb-0 font-weight-bold"><%= @project.name %></h2>
    <small>
      <% if @project.is_private? %>
        <i class="fa fa-lock text-primary"></i>
      <% else %>
        <i class="fa fa-eye text-primary"></i>
      <% end %>
      <%= private_label(@project) %>
      &middot;
      <%= pluralize(@project.project_members.size, 'member') %>
      <% if current_user&.is_staff? %>
        &middot;
        <%= link_to 'Add member', new_project_project_member_path(@project) %>
      <% end %>
    </small>
  </div>

  <div class="col-6 text-right pt-1">
    <%- if policy(@project).edit? %>
      <%= link_to 'Edit', edit_project_path(@project), class: "link-border mr-3" %>
    <% end %>
  </div>
</div>

<%= simple_format @project.description, class: 'mt-2' %>

<nav class="mb-3 pb-3">
  <ul class="nav tabs">
    <li class="nav-item mr-3"><%= link_to 'Overview', project_path(@project), class: "nav-link #{current_action?('show')}" %></li>
    <li class="nav-item mr-3"><%= link_to 'Cards', project_assumptions_path(@project), class: "nav-link #{current_controller?('assumptions')}" %></li>

    <% if @project.support_messages.any? %>
      <li class="nav-item ml-auto">
        <%= link_to project_support_messages_path(@project), class: "nav-link #{current_controller?('support_messages')}" do %>
          Support
          <% if @project.support_messages.where.not(status: 'Complete').any? %>
            <span class="badge badge-primary">
              <%= @project.support_messages.where.not(status: 'Complete').size %>
            </span>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>
