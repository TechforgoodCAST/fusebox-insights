<div class="flow flow20">
  
  <h1 class="fs20 bold mb30">My Projects</h1>

  <% if @projects.count > 0 %>
    <table>
      <tbody>
        <%= @projects.each do |project| %>
          <% if project.slug %>
            <tr>
              <td><%= project.slug %></td>
              <td><strong><%= project.name %></strong><% if project.private %>(private)<% else %>(public)<% end %></td>
              <td><%= link_to 'Show', project_path(slug: project.slug) %></td>
              <td><%= link_to 'Edit', edit_project_path(slug: project.slug) %></td>
            </div>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>It seems like you don't have any projects yet.</p>
  <% end %>
</div>
<div><%= link_to 'Create New Project', new_project_path %></div>