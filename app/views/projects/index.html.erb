<h1 class="mb-4">My Projects</h1>

<div class="row px-3">

  <%= link_to new_project_path, class: "col-md-3 card text-center" do %>
    <em class="fa fa-4x fa-plus"></em>
    New project
  <% end %>

  <%- if @projects.any? %>

    <%- @projects.each do |project| %>
      <div class="col-md-3">
        <%= link_to project_path(slug: project.slug) do %>
          <div class="card">
            <div class="card-body text-centered">
              <h2><strong><%= project.name %></strong></h2>
              <p><%= get_membership(project).role %></p>
              <em><%= private_label(project) %></em>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

  <% end %>

</div>
