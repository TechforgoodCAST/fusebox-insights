<!DOCTYPE html>
<html>
  <head>
    <title>FuseboxInsights</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>

    <p>
      Signed in as <%= current_user&.username %> Â·
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
    </p>

    <nav>
      <%= link_to 'In focus', in_focus_path, class: current_path?(in_focus_path) %>
      <%= link_to 'Unknowns', unknowns_path, class: current_path?(unknowns_path) %>
      <%= link_to 'Insights', insights_path, class: current_path?(insights_path) %>
    </nav>

    <%= yield %>
  </body>
</html>
