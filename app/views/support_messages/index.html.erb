<%= render "projects/header" %>

<% if current_user.is_staff? %>
  <%= link_to new_project_support_message_path(@project), class: 'btn btn-info btn-icon mb-1' do %>
    New support message
  <% end %>
<% end %>

<h3 class="mb-4">Support guide</h3>

<%- @support_messages.each do |message| %>
  <div class="card mb-4">
    <div class="card-header">
      <div class="row">
        <span class="col-8"><strong>
          <%= message.order %>.
          <%= message.subject %>
        </strong></span>
        <span class="col-4 text-right text-info"><strong>
          <%= message.status %>
        </strong></span>
      </div>
    </div>
    <div class="card-body">
      <%= simple_format message.body%>
    </div>
  </div>
<% end %>
