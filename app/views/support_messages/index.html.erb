<%= render "projects/header" %>

<h1>Support Messages</h1>

<% if @support_messages.any? %>
  <%- @support_messages.each do |message| =%>
    <div>
      <p><strong><%= message.order %></strong></p>
      <p><strong><%= message.status %></strong></p><br>
      <p><strong><%= link_to message.subject, project_support_message_path(@project, message) %></strong></p>
      <p><td><%= link_to 'Edit', edit_project_support_message_path(@project, message), class: 'edit-link' %></td></p>
      <td><%= link_to 'Delete', project_support_message_path(@project, message), method: :delete, data: { confirm: 'This operation cannot be undone, are you sure?' }, class: 'destroy-link' %></td>
    </div>
    <hr>
  <% end %>
  <%= link_to 'Add another', new_project_support_message_path(@project) %>
<% else %>
  <p>No support messages for this project!<p>
  <%= link_to 'Create one now', new_project_support_message_path(@project) %>
<% end %>
