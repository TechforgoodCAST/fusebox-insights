
<h1>Create New Support Message</h1>
<%= form_with scope: :support_message, local: true do |form| %>
  <p>
    <%= form.label :body %>
    <%= form.text_field :body, as: :trix_editor %>
  </p>
  <p>
    <%= form.label :order %>
    <%= form.number_field :order, input_html: { min: 1, step: 1 } %>
  </p>
  <p><%= form.submit %></p>
<% end %>