<div class="card purple-border">
  <div class="flex justify-between">
    <span>
      <p class="fs14 grey mb10">
        <%= group.author.username %> Â· Updated <%= time_ago_in_words(group.updated_at) %> ago
      </p>

      <h3><%= link_to group.title, group, class: 'fs18 medium black' %></h3>
      <h4 class='fs18 medium black'>Project: 
        <% if !project.blank? %>
         <%= link_to project.name, project%>
        <% else %>
          N/A
        <% end %>
      </h4>
    </span>

  </div>

  <%- if edit %>
    <div class="my15"><i><%= raw(group.description) %></i></div>
    <div class="my15 trix-formatted"><%= raw(group.summary) %></div>
    <div class="fs14 text-right">

      <% if policy(group).update? %>
        <%= link_to 'Edit', edit_group_path(group) %>
      <% end %>
      
      <% if policy(group).destroy? %>
        <%= link_to 'Delete', group, method: :delete, data: { confirm: 'This action is irreversible, are you sure?' } %>
      <% end %>
    </div>
  <% end %>
</div>
